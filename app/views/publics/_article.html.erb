<%
=begin%>
<div id="<%= dom_id article %>">
  <p>
    <strong>Title:</strong>
    <%= article.title %>
  </p>
  <p>
    <strong>Subtitle:</strong>
    <%= article.subtitle %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= article.description %>
  </p>
  <p>
    <strong>Texte:</strong>
    <%= article.texte %>
  </p>
  <p>
    <strong>User:</strong>
    <%= article.user_id %>
  </p>
</div>
<%
=end%>
<div class="container" id="<%= dom_id article %>">
  <div class="row">
    <div class="col">
      <p>
        <strong>Title:</strong>
        <%= article.title %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= article.description %>
      </p>
    </div>
  </div>
  <% if article.contents.attached? %>
    <div class="row">
      <div class="col">
        <strong>Contents:</strong>
        <% article.contents.each do |content| %>
          <%if content.image?%>
            <div class="card" style="width: 18rem;">
              <%= image_tag(content, class: "card-img-top", alt: "Card image cap") %>
              <div class="card-body">
                <h5 class="card-title"><%= content.filename %></h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
              </div>
            <%elsif content.video?%>
              <div>
                <video
            controls
            muted
            src="<%= rails_blob_url(content) %>"
            width="620" type="<%= content.content_type%>">
                  Sorry, your browser doesn't support embedded videos, but don't worry, you can
                  <a href="https://archive.org/details/BigBuckBunny_124">download it</a>
                  and watch it with your favorite video player!
                </video>
              </div>
            <%elsif content.audio?%>
              <div>
                <%= audio_tag(url_for(content), controls: true)%>
              </div>
            <%else%>
              <div>
                <p class="btn btn-primary">
                  <span class="badge badge-light">
                    <%= link_to content.filename, content %>
                  </span>
                </div>
              </p>
            <%end%>
          <% end %>
        </div>
      </div>
    <%end%>
    <p>
      <strong>User:</strong>
      <%= article.user.name %>
    </p>
  </div>
